<?xml version="1.0"?>
<odoo>
    <record id="employee_certificate_type_view_tree" model="ir.ui.view">
        <field name="name">employee.certificate.type.tree</field>
        <field name="model">employee.certificate.type</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="view_id"
                       context="{'default_type':'qweb'}"/>
            </tree>
        </field>
    </record>

    <record id="employee_certificate_type_view_form" model="ir.ui.view">
        <field name="name">employee.certificate.type.form</field>
        <field name="model">employee.certificate.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <field name="view_id"
                               context="{'default_type':'qweb'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="employee_certificate_type_action" model="ir.actions.act_window">
        <field name="name">Employee Certificate Type</field>
        <field name="res_model">employee.certificate.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Employee Certificate
            </p>
        </field>
    </record>

</odoo>
