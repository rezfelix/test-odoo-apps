<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="user_employee_certificate_rule" model="ir.rule">
        <field name="name">User: Employee certificate</field>
        <field name="model_id" ref="bp_employee_certificate.model_employee_certificate"/>
        <field name="domain_force">[
            ('employee_id.user_id','=', user.id),
            ('state', '=', 'confirm'),
            ]
        </field>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>

    <record id="manager_employee_certificate_rule" model="ir.rule">
        <field name="name">Manager: Employee certificate</field>
        <field name="model_id" ref="bp_employee_certificate.model_employee_certificate"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
    </record>

</odoo>
